.news-container {
  height: 100vh; /* 使scroll-view占满视口高度 */
  padding: 20rpx;
  box-sizing: border-box; /* 包括padding在内计算宽度 */
}

.news-item {
  margin-bottom: 30rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.news-image {
  width: 100%;
  height: 300rpx;
}

.news-content {
  padding: 20rpx;
}

.news-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.news-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.4;
}

.news-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 15rpx;
  text-align: right;
}

