.inputframe{
  border-color: darkgrey;
}
.userpanel {
  background-color: rgba(117, 175, 22, 0.8); /* 背景色具有透明度 */
  border-radius: 10px; /* 圆角背景 */
  padding: 10px; /* 内边距 */
  margin: 15px; /* 外边距 */
}
.user {
  display: flex; /* 设置为 flexbox 布局 */
  justify-content: flex-start; /* 元素从左到右排列 */
  align-items: center; /* 垂直方向居中对齐 */
  padding: 5px; /* 容器内部边距 */
  margin: 5px; /* 容器外部边距 */
}

.age1 {
  margin-right: 8px; /* '岁'和输入框之间的间距 */
  font-size: 16px;  /* 可以根据需要调整字体大小 */
}

.nickname-input1 {
  width: 75rpx;  /* 输入框宽度 */
  height: 75rpx; /* 输入框高度 */
  border-radius: 20px;
  padding: 0rpx;
  font-size: 16px;
  text-align: center; 
  box-sizing: border-box;
  outline: none;
  background-color: aliceblue;
  margin-left: 30rpx;
  margin-right: 10rpx;
  
}

.date{
  display: flex; /* 使用 Flexbox 布局 */
  justify-content: flex-start; /* 元素左对齐 */
  align-items: flex-start; /* 元素垂直方向上对齐 */
  padding-right: 200rpx;
  margin-left: 20rpx;
}
