.container {
  padding: 20rpx;
  font-weight: bold; /* 字体加粗 */
}

.label {
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 10rpx;
}

.input-section {
  margin-bottom: 20rpx;
  height: 47rpx;
  display: flex; /* 使用 Flexbox 布局 */
  align-items: center; /* 垂直方向居中对齐 */
  box-sizing: border-box;
}

.input-group {
  margin-bottom: 30rpx;
}

.group-label {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
  color: #75af16;
}

.input {
  width: 100%;
  padding: 10rpx;
  font-size: 28rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  margin-bottom: 15rpx;
}
.gender-button {
  display: inline-block;
}

.gender-btn {
  padding: 10px 20px;
  border-radius: 20px;
  font-size: 16px;
  color: white;
  text-align: center;
  width: 100rpx;
  cursor: pointer;
  margin-right: 10px; 
}

.gender-btn.blue {
  background-color: rgba(33, 116, 194, 0.7); /* 蓝色背景 */
}

.gender-btn.red {
  background-color: rgb(235, 123, 197,0.85); /* 红色背景 */
}


.button-section {
  margin-top: 30rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 214rpx;
  box-sizing: border-box;
  left: 0rpx;
  top: 0rpx;
}

.save-button, .chart-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 48%;
  height: 200rpx;
  background-color: rgb(255, 255, 255);
  color: black;
  text-align: center;
  line-height: 1.5;
  border-radius: 10px;
  margin-bottom: 20rpx;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.save-button:hover, .chart-button:hover {
  background-color: #75af16;
}

.save-button:active, .chart-button:active {
  background-color:  #75af16;
}

/* 分割线 */
.line {
  flex: 1;
  height: 1px;
  background-color: #ccc;
}

.divider {
  display: flex;
  align-items: center;
  width: 100%;
  margin: 20px 0;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
  height: auto; /* 自动适应高度 */
  position: relative;
  
}

.nickname-label {
  width: 105px;
  font-size: 28rpx;
  color:rgb(102, 101, 101);
  width: 524rpx;
  display: block;
  box-sizing: border-box;
}

.nickname-input {
  flex: 1;
  width: 260rpx;
  font-size: 28rpx;
  color:rgb(133, 127, 127);
}

