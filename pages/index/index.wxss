/* 页面容器，设置相对定位用于放置背景图 */
.container {
  position: relative;
  height: 100vh; /* 设置高度为视口高度，覆盖整个页面 */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

/* 背景图片设置为绝对定位，覆盖整个页面 */
.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1; /* 将背景图片置于内容后面 */
}

/* logo图片样式 */
.logo {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 50rpx;
  z-index: 1; /* 确保logo显示在前面 */
}

/* 按钮容器样式 */
.button-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx; /* 按钮之间的间距 */
  z-index: 1; /* 确保按钮显示在前面 */
}

/* 按钮样式 */
.action-button {
  width: 400rpx;
  height: 80rpx;
  background-color: #007bff; /* 按钮背景色 */
  color: white;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  line-height: 80rpx; /* 垂直居中文本 */
}
