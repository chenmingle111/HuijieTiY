.button-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 20rpx;
}

.level-1,
.level-2 {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.spec1 {
  margin: 10rpx;
  width: 5%; /* 确保每行 4 个按钮 */
  background-color: #4CAF50;
  color: white;
  border: none;
  padding: 5rpx 1rpx;
  border-radius: 10rpx;
  text-align: center;
}

.secondButton {
  display: flex;
  flex-wrap: wrap; /* 允许换行 */
  width: 100%; /* 确保父元素占满宽度 */
}

button { /* 统一所有按钮的样式 */
  margin: 10rpx;
  flex: 1 0 23%; /* 每行显示 4 个按钮 */
  background-color: #4CAF50;
  color: white;
  border: none;
  padding: 12rpx 0;
  border-radius: 10rpx;
  text-align: center;
}



.chart-container {
  width: 100%;
  height: 400px;
}
.spec1{
  background-color:darkcyan
}
.spec1.active {
  background-color:lightskyblue;
  color: black
}
.spec2.active {
  background-color:chartreuse;/* 激活状态的颜色 */
  color: black
}

.text-container{
  font-weight: bold;
}
.arrow-container {
  position: absolute;
  bottom: 10px; /* 距离底部10px */
  left: 50%;
  transform: translateX(-50%);
  animation: bounce 1s infinite; /* 添加跳动动画 */
}

.arrow-icon {
  width: 30px; /* 箭头图标的宽度 */
  height: 30px; /* 箭头图标的高度 */
}

@keyframes bounce {
  0%, 100% {
    transform: translateX(-50%) translateY(0); /* 初始和结束状态 */
  }
  50% {
    transform: translateX(-50%) translateY(-10px); /* 中间跳动状态 */
  }
}
