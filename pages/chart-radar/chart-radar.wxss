/* index.wxss */


.arrow-container {
  position: absolute;
  bottom: 10px; /* 距离底部10px */
  left: 50%;
  transform: translateX(-50%);
  animation: bounce 1s infinite; /* 添加跳动动画 */
}

.arrow-icon {
  width: 30px; /* 箭头图标的宽度 */
  height: 30px; /* 箭头图标的高度 */
}

@keyframes bounce {
  0%, 100% {
    transform: translateX(-50%) translateY(0); /* 初始和结束状态 */
  }
  50% {
    transform: translateX(-50%) translateY(-10px); /* 中间跳动状态 */
  }
}

ec-canvas {
  width: 100%;
  height: 100%;
}
