<view class="my-dialog" hidden="{{!showDialog}}">
  <view bindtap="hide" class="my-mask" ></view>
  <view class="my-container" style="width:{{dialog_width}}px;height:{{dialog_height}}px;border: 3px solid #c0c4cc;border-radius: 5px;">

    <view class="gradient">
      <view class="box">
        <view class="spaceAroundCenter">
          <view class="flex-item">
            <view class="item-content" bindtap="doDay" data-key="left">
              <view class="glyphicon glyphicon-triangle-left">&lt;&lt;</view>
            </view>
          </view>
          <view class="flex-item item-content-current-day">
            <view class="item-content">{{currentDate}}</view>
          </view>
          <view class="flex-item">
            <view class="item-content" bindtap="doDay" data-key="right">
              <view class="glyphicon glyphicon-triangle-right">&gt;&gt;</view>
            </view>
          </view>
        </view>

        <view class="spaceAroundCenter">
          <view>一</view>
          <view>二</view>
          <view>三</view>
          <view>四</view>
          <view>五</view>
          <view>六</view>
          <view>日</view>
        </view>

        <view class="spaceAroundCenter">
  <view class="flex-item" wx:for="{{currentDayList}}" wx:for-index="key" wx:for-item="vo" wx:key="key">
    <view id="{{key}}" class="item-content bk-color-day" bindtap="onClickItem" 
          wx:if="{{vo == currentDay && today_year == cur_year && today_month == cur_month}}">{{vo}}</view>
    <view id="{{key}}" class="item-content bk-color-dayClick" bindtap="onClickItem"  
          wx:elif="{{key == currentClickKey && currentClickKey != '' && vo != ''}}">{{vo}}</view>
    <view id="{{key}}" class="item-content" bindtap="onClickItem" wx:else>{{vo}}</view>
  </view>
</view>


      </view>
    </view>

  </view>
</view>
